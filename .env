# Environment Configuration
PORT=3000
NODE_ENV=production

# Rate Limiting (Configurações profissionais)
# Janela de tempo para contagem de requisições (1 minuto)
RATE_LIMIT_WINDOW_MS=60000

# Máximo de requisições por janela
RATE_LIMIT_MAX_REQUESTS=5

# Duração do bloqueio por abuso (5 minutos)
RATE_LIMIT_BLOCK_MS=300000

# Threshold para detectar abuso (20 requisições na janela = bloqueio automático)
RATE_LIMIT_ABUSE_THRESHOLD=20

# Cache Settings
# TTL do cache em segundos
CACHE_TTL_SECONDS=10

# Query Settings
# Timeout para queries UDP (3 segundos)
QUERY_TIMEOUT_MS=3000

# API Information
API_NAME="SA-MP INFO API"
API_URL="https://api.sampinfo.qzz.io"
API_VERSION="2.0.0"

# Logging
LOG_LEVEL=info
LOG_QUERIES=true
